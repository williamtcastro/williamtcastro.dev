---
const { gridArea, url, bgColor, style } = Astro.props;
const backgroundColor = bgColor ?? "rgba(52, 56, 64, 0.3)";
---

<a id={gridArea} href={url} target="_blank"><slot /></a>

<style
  define:vars={{ area: gridArea, bgColor: backgroundColor,  }}
>
  a {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    grid-area: var(--area);
    text-align: center;
    padding: 20px;
    margin: 10px;
    border-radius: 18px;
    background: var(--bgColor);
    min-width: 10rem;
    min-height: 10rem;
    cursor: pointer;
    user-select: none;
    text-decoration: none;
    color: white;
  }

  a:hover {
    background: rgba(255, 255, 255, 0.25);
    transition: 200ms ease-in-out;
  }

  @media (max-width: 700px) {
    a {
      
      width: 100%;
    }
  }

</style>
