---
import Layout from '../layouts/Layout.astro';
import BentoItem from '../components/BentoItem.astro';
import { Image } from 'astro:assets';

import linkedInImage from '../assets/linkedin.png';
import github from '../assets/github.png';
import insta from '../assets/insta.png';
import carthinghax from '../assets/carthinghax.png';
---

<Layout title="Hi I'm William">
  <main>
    <div class="bento">
      <BentoItem gridArea="linkedin" url="https://wly.lol/job">
        <Image class="logo" alt={'linkedin'} src={linkedInImage} />
      </BentoItem>
      <BentoItem gridArea="github" url="https://wly.lol/git">
        <Image class="logo" src={github} alt={'github'} />
      </BentoItem>
      <BentoItem gridArea="insta" url="https://wly.lol/insta">
        <Image class="logo" src={insta} alt={'insta'} />
      </BentoItem>
      <BentoItem gridArea="name" url="mailto:me@williamtcastro.dev">
        <h1 style="min-width: 100%;">
          <span class="focus-in-expand">Hi, </span>
          <span class="focus-in-expand" style="animation-delay: 0.6s;">
            I'm
          </span>
          <span
            class="focus-in-expand text-gradient"
            style="animation-delay: 1s;">William</span
          >
        </h1>
      </BentoItem>
      <BentoItem gridArea="carthinghax" url="https://wly.lol/carthinghax">
        <Image
          src={carthinghax}
          alt={'carthinghax'}
          class="logo"
          style="border-radius: 1rem;"
        />
      </BentoItem>
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    height: 100%;
    width: 100%;
  }
  .bento {
    display: grid;
    text-align: center;
    grid-template-areas:
      'github name name'
      'linkedin insta carthinghax';
    gap: 0.25rem;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    color: #fff;
    padding: 0 20px;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .logo {
    width: 5rem;
    height: 5rem;
  }

  .focus-in-expand {
    -webkit-animation: focus-in-expand 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)
      both;
    animation: focus-in-expand 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }
  @-webkit-keyframes focus-in-expand {
    0% {
      letter-spacing: -0.5em;
      -webkit-filter: blur(12px);
      filter: blur(12px);
      opacity: 0;
    }
    100% {
      -webkit-filter: blur(0px);
      filter: blur(0px);
      opacity: 1;
    }
  }
  @keyframes focus-in-expand {
    0% {
      letter-spacing: -0.5em;
      -webkit-filter: blur(12px);
      filter: blur(12px);
      opacity: 0;
    }
    100% {
      -webkit-filter: blur(0px);
      filter: blur(0px);
      opacity: 1;
    }
  }
  @media (max-width: 700px) {
    main {
      padding-top: 1rem;
      height: unset;
    }
    .bento {
      grid-template-areas:
        'name'
        'github'
        'linkedin'
        'insta'
        'carthinghax';
      gap: 0.25rem;
      width: 100%;
    }
  }
</style>
